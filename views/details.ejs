<div
  style="
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    background: #f5f6fa;
  "
>
  <div
    style="
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
      padding: 2rem 2.5rem;
      min-width: 340px;
      max-width: 400px;
      width: 100%;
    "
  >
    <h2 style="text-align: center; color: #27ae60; margin-bottom: 1.2rem">
      Message Details
    </h2>
    <div style="margin-bottom: 1.2rem">
      <div
        style="
          font-weight: bold;
          color: #333;
          font-size: 1.1rem;
          margin-bottom: 0.3rem;
        "
      >
        <span style="color: #888">User:</span> <%= message.user %>
      </div>
      <div style="color: #555; margin-bottom: 0.3rem">
        <span style="color: #888">Date:</span> <%=
        message.added.toLocaleDateString() %>
      </div>
      <div style="color: #555; margin-bottom: 0.8rem">
        <span style="color: #888">Time:</span> <%=
        message.added.toLocaleTimeString() %>
      </div>
      <div
        style="
          color: #222;
          font-size: 1.05rem;
          background: #f9f9f9;
          border-radius: 6px;
          padding: 1rem;
        "
      >
        <%= message.text %>
      </div>
    </div>
    <div style="text-align: center">
      <a
        href="/"
        style="
          background: #4f8cff;
          color: #fff;
          padding: 0.6rem 1.2rem;
          border-radius: 6px;
          text-decoration: none;
          font-weight: 500;
          font-size: 1rem;
        "
        >Back</a
      >
    </div>
  </div>
</div>
